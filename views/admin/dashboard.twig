{% extends 'admin/layout.twig'%}

{% block body%}
<header>
    <h1> Dashboard </h1>
    <button id="deco" type="submit">Deconnexion</button>
</header>

<main role="main">

    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Gestion des flipbooks</h1>
        <p class="lead text-muted">Ajouter, modifier, supprimer des flipbooks</p>
        <p>
          <button class="btn btn-success my-2" type="button" data-toggle="modal" data-target="#create-flipbook">Importer un flipbook</button>
          <a href="#" id="logout" class="btn btn-secondary my-2">Se déconnecter</a>
        </p>
      </div>
    </section>
  
    <div class="card-body" id="create-flipbook">
      <h5 class="card-title">Importer un flipbook</h5>
      <form method="post" id="signin" action="/users">
  
        <label class="mt-2 mb-2" for="title">Titre</label>
        <input class="mt-2 mb-2" type="text" name="title" placeholder="Prénom" required>
  
        <label class="mt-2 mb-2" for="pdfFile">Importer le fichier PDF</label>
        <input class="mt-2 mb-2" type="file" name="pdfFile" multiple="false" accept="application/pdf,application/vnd.ms-excel" required>
        
        <input class="mt-2 mb-2 btn btn-primary" type="submit"  value="Importer le flipbook">
    
      </form>
    </div>
  
    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
          
          {% for i in 1..3 %}
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <img class="card-img-top" src="../../public/images/Gray_book.png" alt="Card image cap">
              <div class="card-body">
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"><svg class="bi bi-eye" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 001.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0014.828 8a13.133 13.133 0 00-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 001.172 8z" clip-rule="evenodd"/>
                      <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 100 5 2.5 2.5 0 000-5zM4.5 8a3.5 3.5 0 117 0 3.5 3.5 0 01-7 0z" clip-rule="evenodd"/>
                    </svg></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 011.414 0l2 2a1 1 0 010 1.414l-9 9a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" clip-rule="evenodd"/>
                      <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 00.5.5H4v.5a.5.5 0 00.5.5H5v.5a.5.5 0 00.5.5H6v-1.5a.5.5 0 00-.5-.5H5v-.5a.5.5 0 00-.5-.5H3z" clip-rule="evenodd"/>
                    </svg></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
                      <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
                    </svg></button>
                  </div>
                  <small class="text-muted">{{i}}</small>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
  
        </div>
      </div>
    </div>
  
  </main>
  
  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
      <p>Album example is &copy; Bootstrap, but please download and customize it for yourself!</p>
      <p>New to Bootstrap? <a href="../../">Visit the homepage</a> or read our <a href="../../getting-started/">getting started guide</a>.</p>
    </div>
  </footer>
{% endblock %}
